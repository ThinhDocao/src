@model List<S3Train.Web.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int number = 1;
}
@section scripts{
    <script src="~/Scripts/cartController.js"></script>
}

@if (Model.Count > 0)
{
    <div class="col-md-12">
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên SP</th>
                        <th>Ảnh SP</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Thành tiền</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr class="tr-shadow">
                            <td> @number </td>
                            <td> @item.Product.Name </td>
                            <td> <img src="@item.Product.Image" style="width:60px" /> </td>
                            <td> <input type="number" class="txtQuantity" data-id="@item.Product.Id" value="@item.Quatity" />  </td>
                            <td> @item.Product.Price </td>
                            <td> @(item.Product.Price * item.Quatity) </td>
                            <td><a href="#" data-id="@item.Product.Id" class="btn-delete">Xóa</a></td>
                        </tr>

                        @(number = number + 1);
                    }
                </tbody>
            </table>
        </div>
    </div>

    <button id="btnContinue" class="btn btn-danger">Tiếp tục mua hàng</button>
    <button id="btnUpdate" class="btn btn-danger">Cập nhật giỏ hàng</button>
    <button id="btnDeleteAll" class="btn btn-danger">Xóa giỏ hàng</button>
    <button id="btnPayment" class="btn btn-danger">Thanh toán</button>
}
else
{
    <span>Không có sản phẩm nào trong giỏ hàng</span>
}

